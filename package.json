{
  "name": "offline-materials-library",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon src/index.ts",
    "debug": "node --inspect dist/index.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint '{src,tests}/**/*.ts' '*.ts'",
    "format": "prettier --write '{src,tests}/**/*.{ts,js,json,md}' '*.{ts,js,json,md}'",
    "format:check": "prettier --check '{src,tests}/**/*.{ts,js,json,md}' '*.{ts,js,json,md}'",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "mongoose": "^8.8.2",
    "next": "15.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20",
    "@types/supertest": "^6.0.2",
    "eslint": "^8",
    "eslint-config-next": "15.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.2",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
